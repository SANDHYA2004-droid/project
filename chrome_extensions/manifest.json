{
  "manifest_version": 3,
  "name": "Teams Meeting Monitor",
  "version": "1.0",
  "description": "Shows notifications when Microsoft Teams meetings start or end.",
  "permissions": ["notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
