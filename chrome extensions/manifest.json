{
  "manifest_version": 3,
  "name": "Teams Meeting Monitor",
  "version": "1.1",
  "description": "Shows notifications when Microsoft Teams meetings start or end.",
  "permissions": ["notifications", "scripting"],
  "host_permissions": [
    "*://*.teams.microsoft.com/*",
    "*://teams.live.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.teams.microsoft.com/*",
        "*://teams.live.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
